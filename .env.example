# .env.example â€” template for local development and CI
# Copy this to `.env` and fill secrets (do NOT commit your .env with secrets)

# Database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/afrisense_db?schema=public

# Server
PORT=3000
NODE_ENV=development

# Auth / JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=10d

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_TO_CONSOLE=true

# Notification overrides (for testing only)
NOTIFY_OVERRIDE_EMAIL=
NOTIFY_OVERRIDE_PHONE=

# Email (SMTP / Resend)
# Use either Resend or SMTP. If using SMTP, set SMTP_* values.
RESEND_API_KEY=
RESEND_FROM_EMAIL=

SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
DEFAULT_ALERT_EMAIL=

# Africa's Talking (preferred for many African countries)
# For sandbox testing use: AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_USERNAME=
AFRICASTALKING_API_KEY=
AFRICASTALKING_SENDER_ID=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_WHATSAPP_FROM=

# CallMeBot (simple fallback)
CALLMEBOT_API_KEY=
CALLMEBOT_SMS_URL=
CALLMEBOT_WHATSAPP_URL=

# App specific / jobs / thresholds
POSITIONS_BULK_CHUNK_SIZE=5000
ALERT_NO_MOVEMENT_MINUTES=15
ALERT_OFFLINE_MINUTES=10

# Webhooks & security
TRACCAR_API_KEY=

# Examples (commented)
# AFRICASTALKING_USERNAME=sandbox
# AFRICASTALKING_API_KEY=atsk_xxx
# TWILIO_ACCOUNT_SID=ACxxxxxxxx
# TWILIO_AUTH_TOKEN=yyyyyyyy

