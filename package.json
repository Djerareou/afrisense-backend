{
  "name": "afrisense-backend",
  "version": "1.0.0",
  "description": "Backend AfriSense Platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "send-test-twilio": "node src/scripts/send_test_twilio.js",
    "test-notify": "node src/scripts/test_notify_alert.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:ci": "npx prisma migrate deploy && jest --runInBand",
    "test:local": "npx prisma migrate reset --force && jest --runInBand",
    "test:unit": "jest --runInBand src/test/unit",
    "test:integration": "jest --runInBand src/test/auth src/test/trackers"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "africastalking": "^0.7.8",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.11",
    "pino": "^10.1.0",
    "rotating-file-stream": "^3.0.4",
    "swagger-ui-express": "^4.6.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "eslint": "^8.44.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "prisma": "^6.19.0",
    "supertest": "^6.3.3"
  },
  "author": "Djerareou Arsene",
  "license": "MIT"
}
